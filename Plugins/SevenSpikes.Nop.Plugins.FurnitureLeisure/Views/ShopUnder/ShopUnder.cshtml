@model Nop.Web.Models.Catalog.CategoryModel

@if (Model.FeaturedProducts.Count > 0)
{
    var shopUnder = Model.CustomProperties["ShopUnder"];
    var url = Url.RouteUrl("Category", new { SeName = Model.SeName }) + "#/prFilter=To-" + shopUnder;

    <div class="product-grid featured-product-grid shop-under">
        <div class="title">
            <strong>@Model.CustomProperties["TitleText"]</strong>
        </div>
        <div class="item-grid">
            @foreach (var item in Model.FeaturedProducts)
            {
                <div class="item-box">
                    @Html.Partial("_ProductBox", item)
                </div>
            }
        </div>
        <a class="shop-under-button" href="@url">@Model.CustomProperties["ButtonText"]</a>
    </div>


}