@model CustomerNavigationModel           
@using Nop.Web.Models.Customer;
<div class="account-navigation-wrapper">
    <ul class="account-navigation-list">
        @Html.Widget("account_navigation_before")
        @if (!Model.HideInfo)
        {
            <li><a href="@Url.RouteUrl("CustomerInfo")" class="customer-info @if (Model.SelectedTab == CustomerNavigationEnum.Info)
                                                                             {<text>active</text>}
                                                                             else
                                                                             {<text>inactive</text>}"><span>@T("Account.CustomerInfo")</span></a></li>
        }
        @if (!Model.HideAddresses)
        {
            <li><a href="@Url.RouteUrl("CustomerAddresses")" class="customer-addresses @if (Model.SelectedTab == CustomerNavigationEnum.Addresses)
                                                                                       {<text>active</text>}
                                                                                       else
                                                                                       {<text>inactive</text>}"><span>@T("Account.CustomerAddresses")</span></a></li>
        }
        @if (!Model.HideOrders)
        { 
            <li><a href="@Url.RouteUrl("CustomerOrders")" class="customer-orders @if (Model.SelectedTab == CustomerNavigationEnum.Orders)
                                                                                 {<text>active</text>}
                                                                                 else
                                                                                 {<text>inactive</text>}"><span>@T("Account.CustomerOrders")</span></a></li>
        }
        @if (!Model.HideReturnRequests)
        { 
            <li><a href="@Url.RouteUrl("CustomerReturnRequests")" class="return-requests @if (Model.SelectedTab == CustomerNavigationEnum.ReturnRequests)
                                                                                         {<text>active</text>}
                                                                                         else
                                                                                         {<text>inactive</text>}"><span>@T("Account.CustomerReturnRequests")</span></a></li>
        }
        @if (!Model.HideDownloadableProducts)
        { 
            <li><a href="@Url.RouteUrl("CustomerDownloadableProducts")" class="downloadable-products @if (Model.SelectedTab == CustomerNavigationEnum.DownloadableProducts)
                                                                                                     {<text>active</text>}
                                                                                                     else
                                                                                                     {<text>inactive</text>}"><span>@T("Account.DownloadableProducts")</span></a></li>
        }
        @if (!Model.HideBackInStockSubscriptions)
        { 
            <li><a href="@Url.RouteUrl("CustomerBackInStockSubscriptions")" class="back-in-stock-subscriptions @if (Model.SelectedTab == CustomerNavigationEnum.BackInStockSubscriptions)
