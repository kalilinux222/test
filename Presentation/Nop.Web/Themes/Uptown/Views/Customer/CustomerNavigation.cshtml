        }
        @if (!Model.HideChangePassword)
        { 
            <li><a href="@Url.RouteUrl("CustomerChangePassword")" class="change-password @if (Model.SelectedTab == CustomerNavigationEnum.ChangePassword)
                                                                                         {<text>active</text>}
                                                                                         else
                                                                                         {<text>inactive</text>}"><span>@T("Account.ChangePassword")</span></a></li>
        }
        @if (!Model.HideAvatar)
        { 
            <li><a href="@Url.RouteUrl("CustomerAvatar")" class="customer-avatar @if (Model.SelectedTab == CustomerNavigationEnum.Avatar)
                                                                                 {<text>active</text>}
                                                                                 else
                                                                                 {<text>inactive</text>}"><span>@T("Account.Avatar")</span></a></li> 
        }
        @if (!Model.HideForumSubscriptions)
        { 
            <li><a href="@Url.RouteUrl("CustomerForumSubscriptions")" class="forum-subscriptions @if (Model.SelectedTab == CustomerNavigationEnum.ForumSubscriptions)
                                                                                                 {<text>active</text>}
                                                                                                 else
                                                                                                 {<text>inactive</text>}"><span>@T("Account.ForumSubscriptions")</span></a></li>
        }
        @Html.Widget("account_navigation_after")
    </ul>
</div>
